<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:id="@+id/linear_xinde">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:id="@+id/linear_share"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/hospitalmhistory_intime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_below="@id/user_image"
                        android:layout_centerHorizontal="true"
                        android:text="入院日期："
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text=""
                            android:drawablePadding="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/edit"
                            android:background="@drawable/bt_back_selector"
                            android:drawableRight="@drawable/edit_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text=""
                            android:drawablePadding="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/delete"
                            android:background="@drawable/bt_back_selector"
                            android:drawableRight="@drawable/delete"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/hospitalmhistory_outtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_image"
                        android:layout_centerHorizontal="true"
                        android:text="出院日期："
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/hospitalmhistory_doctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_image"
                        android:layout_centerHorizontal="true"
                        android:text="主治医生："
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/hospitalmhistory_chufang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_image"
                        android:layout_centerHorizontal="true"
                        android:text="医生处方："
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>
            </LinearLayout>
            </LinearLayout>




    </LinearLayout>


</LinearLayout>

