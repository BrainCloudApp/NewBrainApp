<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bt_back_selector"
            android:layout_alignParentLeft="true"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/back_white"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:id="@+id/back"
            android:textSize="@dimen/LargeTextSize"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""

            android:textSize="@dimen/LargeTextSize"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/LargeTextSize"
            android:id="@+id/action"
            android:visibility="gone"
            android:drawableRight="@drawable/share"
            android:text=""/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"><!--
  
     <android.webkit.WebView android:id="@+id/webkitWebView1"
         
          android:scrollbars="none"
           android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            
            android:layout_weight="1"></android.webkit.WebView>
--><WebView android:id="@+id/webkitWebView1"

        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f3f3f3"
        android:layout_weight="1"></WebView>
        <ProgressBar android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/progress"/></RelativeLayout>
    <!--
     <Button android:layout_width="40dip"
                             android:layout_height="40dip"

                             android:id="@+id/back"
                             android:background="@drawable/backbtselector"
                             android:layout_marginLeft="4dip"
                             android:layout_gravity="center_vertical"/>
    -->



</LinearLayout>