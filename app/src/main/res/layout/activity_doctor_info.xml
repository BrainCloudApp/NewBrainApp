<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonInfo"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bt_back_selector"
            android:layout_alignParentLeft="true"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/back_white"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:id="@+id/back"
            android:textSize="@dimen/LargeTextSize"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="xxx"

            android:textSize="@dimen/LargeTextSize"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/LargeTextSize"
            android:id="@+id/action"
            android:visibility="gone"
            android:drawableRight="@drawable/share"
            android:text=""/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/user1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:layout_gravity="center_vertical"

                        android:textColor="#000000"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/zhiwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主任医师"
                        android:layout_gravity="center_vertical"

                        android:textColor="#000000"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属医院"
                        android:layout_gravity="center_vertical"

                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业擅长"
                    android:layout_gravity="center_vertical"

                    android:textColor="#000000"
                    android:textSize="15sp" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长各种领域的医疗"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"

                    android:textColor="#ccc"
                    android:textSize="15sp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/line"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </ScrollView>

   <Button
       android:layout_width="match_parent"
       android:layout_height="44dp"
       android:background="@drawable/bt_bottom_nomal"
       android:text="咨  询"
       android:textColor="#fff"
       android:textSize="17sp"
       android:id="@+id/gochat"
       android:layout_margin="15dp"/>
</LinearLayout>